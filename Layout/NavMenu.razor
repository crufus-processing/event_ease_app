@inject NavigationManager NavManager

<Bar Mode="BarMode.VerticalInline"
    Alignment="Alignment.Start"
    Breakpoint="Breakpoint.Desktop"
    Background="Background.Light"
    ThemeContrast="ThemeContrast.Light">
    <BarBrand>
        <BarItem ElementId="brand">
            <BarIcon IconName="IconName.Calendar" />
            <Text>EventEase</Text>
        </BarItem>
    </BarBrand>
    <BarMenu>
        <BarItem>
            <BarLink To="@NavManager.BaseUri">
                <BarIcon IconName="IconName.Portrait" />
                <Text>Home</Text>
            </BarLink>
        </BarItem>
        <BarItem>
            <BarLink To="@($"{NavManager.BaseUri}events")">
                <BarIcon IconName="IconName.CalendarWeek" />
                <Text>All Events</Text>
            </BarLink>
        </BarItem>
        <BarItem>
            <BarLink To="@($"{NavManager.BaseUri}attending")">
                <BarIcon IconName="IconName.CalendarDay" />
                <Text>Attending</Text>
            </BarLink>
        </BarItem>
        <BarItem>
            <BarLink To="@($"{NavManager.BaseUri}hosting")">
                <BarIcon IconName="IconName.CalendarCheck" />
                <Text>Hosting</Text>
            </BarLink>
        </BarItem>
        <BarItem>
            <BarLink To="@($"{NavManager.BaseUri}edit")">
                <BarIcon IconName="IconName.PlusSquare" />
                <Text>Create Event</Text>
            </BarLink>
        </BarItem>
    </BarMenu>
</Bar>